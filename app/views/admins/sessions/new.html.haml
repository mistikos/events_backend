.row
  .col-md-4.col-md-offset-4
    = image_tag('logo.png')
.row.login
  .col-md-5.col-md-offset-4
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: true, autofocus: true, label: false, input_html: {placeholder: 'correo electronico'}
        = f.input :password, required: true, label: false, input_html: {placeholder: 'contrase√±a'}
        = f.input :remember_me, as: :boolean, label: 'Recordarme' if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Log in", class: 'btn btn-primary'
    = render "admins/shared/links"