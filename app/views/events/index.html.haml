%h2= t '.title'
.sort-container
  %section{class: 'segmented-control'}
    = link_to 'En curso', events_path, class: 'segmented-control__segment'
    = link_to 'Pasados', past_events_path, class: 'segmented-control__segment'
- if @events.any?
  - @events.in_groups_of(3, false) do |events|
    .row.events= render events
  .paginate
    = will_paginate @events
